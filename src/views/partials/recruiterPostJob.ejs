<%- include('./head') %>
<%- include('./nav') %>
<%if(locals.lastVisit){%>
  <div class ="alert alert-primary" role="alert">
    your last Visit was on :   <%=locals.lastVisit%>
  </div>
  <%}%>
<h1 class="mt-5 mb-4 header">All Posted Job</h1>
<div class="container">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Tech</th>
        <th scope="col">location</th>
        <th scope="col">LPA</th>
        <th scope="col">skills</th>

      </tr>
    </thead>
    <tbody>
      <% products.forEach(product => { %>
        <tr>
          <th scope="row"><%= product.id %></th>
          <td><%= product.name %></td>
          <td><%= product.tech %></td>
          <td><%= product.location %></td>
          <td><%= product.LPA %></td>
          <td>
            <% product.skills.forEach(skill => { %>
              <button class="btn btn-sm btn-outline-info"><%= skill %></button>
            <% }); %>          
          </td>
    
         
        <td>
            <a href="/update-product/<%= product.id %>" class="btn btn-warning">Update</a>
            <!-- <button class="btn btn-danger" onclick="deleteProduct('<%= product.id %>')">Delete</button> -->
            <a href="/delete-product/<%= product.id %>" class="btn btn-danger">Delete</a>
        </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


<%- include('./scripts') %>